server {
    listen 80;
    server_name _;
    charset utf-8;

    access_log /var/log/nginx/nginx.codebazar.access.log;
    error_log /var/log/nginx/nginx.codebazar.error.log;

    gzip on; # Enable gzip compression
    gzip_comp_level 2;


    location / {
        proxy_pass http://52.58.100.247:3060;
        proxy_redirect     off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_read_timeout 24h;
    }
}
